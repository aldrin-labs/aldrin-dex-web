{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist/",
    "target": "es6",
    "sourceMap": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": true,
    "module": "es6",
    "moduleResolution": "node",
    "alwaysStrict": false,
    "allowJs": false,
    "jsx": "react",
    "lib": ["es6", "es7", "dom"],
    "paths": {
      "components": ["./src/components"],
      "containers": ["./src/containers"]
    }
  },
  "include": ["src", "typings"]
}
