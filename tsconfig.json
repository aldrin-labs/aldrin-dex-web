{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist/",
    "target": "esnext",
    "sourceMap": true,
    "strict": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "allowSyntheticDefaultImports": true,
    "module": "esnext",
    "moduleResolution": "node",
    "alwaysStrict": false,
    "allowJs": false,
    "jsx": "react",
    "lib": ["es2017", "dom"],
    "paths": {
      "@components/*": ["src/components/*"],
      "@containers/*": ["src/containers/*"],
      "@utils/*": ["src/utils/*"],
      "@hoc/*": ["src/hoc/*"]
    },
    "plugins": [
      {
        "name": "typescript-styled-plugin"
      }
    ]
  },
  "include": ["src", "typings"]
}
